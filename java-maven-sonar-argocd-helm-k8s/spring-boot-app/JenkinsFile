pipeline {
    agent any

    environment {
        SONAR_URL = "http://54.224.255.158:9000"
        GIT_REPO_NAME = "Jenkins"
        GIT_USER_NAME = "Ravi-Baligar"
    }

    stages {

        // -------------------------------
        // Stage 1: Checkout Code
        // -------------------------------
        stage('Checkout') {
            steps {
                checkout([$class: 'GitSCM',
                          branches: [[name: '*/main']],
                          userRemoteConfigs: [[url: 'https://github.com/Ravi-Baligar/Jenkins.git']]])
            }
        }

        // -------------------------------
        // Stage 2: Build and Test Maven Project
        // -------------------------------
        stage('Build and Test') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17'
                    args '--user root'
                }
            }
            steps {
                sh '''
                    cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                    mvn clean package
                '''
            }
        }

        // -------------------------------
        // Stage 3: SonarQube Static Analysis
        // -------------------------------
        stage('Static Code Analysis') {
            agent {
                docker {
                    image 'maven:3.9.9-eclipse-temurin-17'
                    args '--user root'
                }
            }
            steps {
                withCredentials([string(credentialsId: 'sonarqube', variable: 'SONAR_AUTH_TOKEN')]) {
                    sh '''
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        mvn sonar:sonar -Dsonar.login=$SONAR_AUTH_TOKEN -Dsonar.host.url=${SONAR_URL}
                    '''
                }
            }
        }

        // -------------------------------
        // Stage 4: Build and Push Docker Image
        // -------------------------------
        stage('Build and Push Docker Image') {
            agent {
                docker {
                    image 'docker:24.0.5'
                    args '--user root -v /var/run/docker.sock:/var/run/docker.sock'
                }
            }
            environment {
                REGISTRY_CREDENTIALS = credentials('docker-cred')
            }
            steps {
                script {
                    def dockerImageTag = "ravi3423/ultimate-cicd:${BUILD_NUMBER}"
                    
                    sh """
                        cd java-maven-sonar-argocd-helm-k8s/spring-boot-app
                        docker build -t ${dockerImageTag} .
                    """

                    def dockerImage = docker.image(dockerImageTag)
                    docker.withRegistry('https://index.docker.io/v1/', "docker-cred") {
                        dockerImage.push()
                    }
                }
            }
        }

        // -------------------------------
        // Stage 5: Update Deployment File and Push
        // -------------------------------
        stage('Update Deployment File') {
    agent any
    steps {
        withCredentials([string(credentialsId: 'github', variable: 'GITHUB_TOKEN')]) {
            sh '''
                git config user.email "ravibaligar108@gmail.com"
                git config user.name "Ravi Baligar"
                
                sed -i "s/replaceImageTag/${BUILD_NUMBER}/g" java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                git add java-maven-sonar-argocd-helm-k8s/spring-boot-app-manifests/deployment.yml
                git commit -m "Update deployment image to version ${BUILD_NUMBER}" || echo "No changes to commit"
                git push https://${GITHUB_TOKEN}@github.com/${GIT_USER_NAME}/${GIT_REPO_NAME} HEAD:main
            '''
        }
    }
}

    }

    post {
        always {
            cleanWs()
        }
    }
}
